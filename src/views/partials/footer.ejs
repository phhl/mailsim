  <div id="toast-container" class="toast-container" aria-live="polite" aria-atomic="true"></div>
  <script>
    (function () {
      const container = document.getElementById('toast-container');
      if (!container) return;

      const pickDuration = (el) => {
        if (el.classList.contains('is-danger') || el.classList.contains('is-warning')) return 4500;
        return 2500;
      };

      const toasts = Array.from(document.querySelectorAll('.notification[data-toast]'));
      toasts.forEach((toast) => {
        toast.classList.add('toast');
        toast.setAttribute('role', 'alert');
        container.appendChild(toast);
        const duration = pickDuration(toast);
        requestAnimationFrame(() => {
          toast.classList.add('toast--show');
        });
        setTimeout(() => {
          toast.classList.remove('toast--show');
          toast.classList.add('toast--hide');
        }, duration);
        setTimeout(() => {
          toast.remove();
        }, duration + 500);
      });
    })();
  </script>
  <script>
    document.addEventListener('DOMContentLoaded', () => {
      document.querySelectorAll('.navbar-burger').forEach((burger) => {
        const targetId = burger.dataset.target;
        const target =
          (targetId && document.getElementById(targetId)) ||
          document.querySelector('.navbar-menu');
        if (!target) return;

        burger.addEventListener('click', () => {
          const isActive = burger.classList.toggle('is-active');
          target.classList.toggle('is-active', isActive);
          burger.setAttribute('aria-expanded', isActive.toString());
        });
      });
    });
  </script>
