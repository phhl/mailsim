<!doctype html>
<html lang="<%= locale || 'de' %>">
<head>
  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <% const _title = (typeof title !== 'undefined' && title) ? title : t('app.title'); %>
  <% const _assetVersion = (typeof assetVersion !== 'undefined' && assetVersion) ? assetVersion : Date.now(); %>
  <% const _extraHead = (typeof extraHead !== 'undefined' && extraHead) ? extraHead : ''; %>
  <title><%= _title %></title>
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bulma@0.9.4/css/bulma.min.css">
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/remixicon@4.3.0/fonts/remixicon.css">
  <link rel="stylesheet" href="/assets/app.css?v=<%= _assetVersion %>">
  <%- _extraHead %>
</head>
<body>
<nav class="navbar is-light" role="navigation" aria-label="main navigation">
  <div class="navbar-brand">
    <a class="navbar-item" href="/mailbox/INBOX">
      <span class="icon-text">
        <span class="icon"><i class="ri-mail-line" aria-hidden="true"></i></span>
        <strong><%= t('app.title') %></strong>
      </span>
    </a>
    <a role="button"
       class="navbar-burger"
       aria-label="menu"
       aria-expanded="false"
       data-target="primary-navbar"
    >
      <span aria-hidden="true"></span>
      <span aria-hidden="true"></span>
      <span aria-hidden="true"></span>
    </a>
  </div>

  <div id="primary-navbar" class="navbar-menu">
    <div class="navbar-start">
      <% if (me) { %>
        <a class="navbar-item" href="/compose">
          <span class="icon-text">
            <span class="icon"><i class="ri-edit-2-line" aria-hidden="true"></i></span>
            <span><%= t('nav.new') %></span>
          </span>
        </a>
      <% } %>
      <% if (me && (me.role === 'teacher' || me.role === 'schooladmin' || me.role === 'admin')) { %>
        <a class="navbar-item" href="/teacher">
          <span class="icon-text">
            <span class="icon"><i class="ri-graduation-cap-line" aria-hidden="true"></i></span>
            <span><%= t('nav.teacher') %></span>
          </span>
        </a>
      <% } %>
      <% if (me && (me.role === 'schooladmin' || me.role === 'admin')) { %>
        <a class="navbar-item" href="/schooladmin">
          <span class="icon-text">
            <span class="icon"><i class="ri-building-2-line" aria-hidden="true"></i></span>
            <span><%= t('nav.schooladmin') %></span>
          </span>
        </a>
      <% } %>
      <% if (me && me.role === 'admin') { %>
        <a class="navbar-item" href="/admin">
          <span class="icon-text">
            <span class="icon"><i class="ri-settings-3-line" aria-hidden="true"></i></span>
            <span><%= t('nav.admin') %></span>
          </span>
        </a>
      <% } %>
    </div>

    <div class="navbar-end">
      <% if (me) { %>
        <div class="navbar-item">
        <span class="mr-3">
          <%= me.display_name %>
          <% if (me.role !== 'student') { %>
            (<%= t(`roles.${me.role}`) %>)
          <% } %>
        </span>
          <a class="button is-small is-light mr-2" href="/account">
            <span class="icon-text">
              <span class="icon"><i class="ri-user-settings-line" aria-hidden="true"></i></span>
              <span><%= t('nav.change_password') %></span>
            </span>
          </a>
          <a class="button is-small is-light" href="/logout">
            <span class="icon-text">
              <span class="icon"><i class="ri-logout-box-line" aria-hidden="true"></i></span>
              <span><%= t('nav.logout') %></span>
            </span>
          </a>
        </div>
      <% } %>
    </div>
  </div>
</nav>
