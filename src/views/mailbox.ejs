<%- include('partials/header', { title: `Mailbox ${folder}`, me, extraHead: '' }) %>
<%- include('partials/layout_start', { showSidebar: true, activeFolder: folder }) %>

<h1 class="title is-4"><%= folder %></h1>

<% if (!items.length) { %>
  <div class="notification is-light">Keine Nachrichten.</div>
<% } else { %>
  <div class="table-wrap">
<table class="table is-fullwidth is-hoverable mail-list">
    <thead>
      <tr>
        <% const showStatus = (folder === 'INBOX' || folder === 'TRASH'); %>
        <% if (showStatus) { %><th>Status</th><% } %>
        <th>Von</th>
        <th>Betreff</th>
        <th>Vorschau</th>
        <th>Datum</th>
      </tr>
    </thead>
    <tbody>
      <% items.forEach(it => { %>
        <tr>
          <% if (showStatus) { %><td><%= it.is_read ? 'gelesen' : 'neu' %></td><% } %>
          <td><%= it.sender_name %> &lt;<%= it.sender_email %>&gt;</td>
          <td><a href="/mail/<%= it.message_id %>"><%= it.subject %></a></td>
          <td class="mail-snippet"><%= it.snippet %></td>
          <td><%= (it.created_at_local || it.created_at) %></td>
        </tr>
      <% }) %>
    </tbody>
  </table>
</div>
<% } %>

<%- include('partials/layout_end', { showSidebar: true }) %>

<%- include('partials/footer') %>